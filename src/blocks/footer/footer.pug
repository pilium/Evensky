mixin footer()
	footer.footer
		.footer__top
			.container
				+order-callback({
					descr: 'Звоните круглосуточно',
					tel: '+7 490 456-34-34',
					link: '#',
					linkText: 'Заказать звонок',
					position: 'footer'
				})
		.footer__main
			.container
				.footer__columns
					.footer__nav
						+footer-column-nav('О нас',[
							{link: '#', text: 'Оплата и доставка'},
							{link: '#', text: 'Гарантия'},
							{link: '#', text: 'Услуги по обработке металла'},
							{link: '#', text: 'Компания'},
							{link: '#', text: 'Контакты', descr: 'Связь с директором'}
						])
						+footer-column-nav('Каталог',[
							{link: '#', text: 'Все для кровли'},
							{link: '#', text: 'Фасад'},
							{link: '#', text: 'Профнастил'},
							{link: '#', text: 'Листовой прокат'},
							{link: '#', text: 'Рулонная сталь'}
						])
					+footer-column-pay({
						title: 'Принимаем к оплате',
						href: '#',
						link: 'Оплата заказа онлайн',
						titleBottom: 'Акции и спецпредложения'
					})
					+footer-column-contacts('Контакты')
		.footer__bottom
			.container
				+copyright('#', '#')

mixin product(props)
	-
		var allMods = "";
		if(typeof(props.mods) !== "undefined" && props.mods)
			var modsList = props.mods.split(",");
			for (var i = 0; i < modsList.length; i++) {
				allMods = allMods + " product-prev--" + modsList[i].trim();
			}

	.product-prev(class= allMods)
		a.product-prev__header(href= props.link)
			.product-prev__marks
				.product-prev__mark.product-prev__mark--bg-yellow= props.sale
				if(props.badge !== '')
					.product-prev__mark.product-prev__mark--bg-green= props.badge
			img.product-prev__img(src="../images/product/images/plank.png" alt="product")
		a.product-prev__body(href= props.link)
			.product-prev__title
				span.product-prev__name= props.name
				span.text-count= props.count
			if(!props.info)
				.product-prev__info-wrapper
					.product-prev__info
						span.product-prev__label Артикул
						span.product-prev__value= props.articul
					.product-prev__info.product-prev__info--wide
						span.product-prev__label Срок изготовления
						span.product-prev__value= props.timeFor
				.product-prev__price
					span.product-prev__price-old= props.priceOld
					span.product-prev__price-current= props.priceNow
			else
				.product-prev__price
					span.product-prev__price-old= props.priceOld
					span.product-prev__price-current= props.priceNow
				.text-count.product-prev__order-info Заказано 2 сентября 2018 года
		.product-prev__footer
			if (props.counter === true)
				+product-counter()
			+btn({
				tag: 'button',
				href: '#',
				text: props.btnText,
				mods: 'fill',
				icon: 'cart',
				iconClass: 'product-prev__icon'
			})

mixin btn(props)
	-
		var allMods = '';
		if(typeof(props.mods) !== 'undefined' && props.mods) {
			var modsList = props.mods.split(',');
			for (var i = 0; i < modsList.length; i++) {
				allMods = allMods + ' btn--' + modsList[i].trim();
			}
		}
	if(props.tag === 'a')
		a.btn(class=allMods href=props.href)= props.text
	if(props.tag === 'button')
		button.btn.btn--fill
			+icon(props.icon, 'basket__icon')
			span= props.text

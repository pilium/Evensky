mixin top-sale(href, title, grid, big)
	if big
		a.top-sale.top-sale--big(href=href class=`top-sale__grid-${grid}`)
			.top-sale__img-wrapper
				img.top-sale__img(src="https://source.unsplash.com/MYlCex1M7Ok/600x400" alt="Фото товара")
			span.top-sale__title= title
	else
		a.top-sale(href=href class=`top-sale__grid-${grid}`)
			.top-sale__img-wrapper
				img.top-sale__img(src="https://source.unsplash.com/MYlCex1M7Ok/600x400" alt="Фото товара")
			span.top-sale__title= title

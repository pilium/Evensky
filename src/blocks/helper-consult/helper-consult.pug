mixin helper-consult(props)
	.helper-consult
		p.helper-consult__description= props.descr
		.helper-consult__row
			.helper-consult__col
				+btn({
					tag: 'a',
					href: '#',
					text: props.btnText,
					mods: 'transparent,border-green',
				})
				span.helper-consult__info= props.info
			.helper-consult__col
				p.helper-consult__text Также получить ответы на вопросы можно по телефону #[br]
					a.helper-consult__link(href="#") 7 499 334-88-88 
					|  (круглосуточно)
